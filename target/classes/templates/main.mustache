<!DOCTYPE html>
<html xmlns:=http://www.w3.org/1999/xhtml>
<head>
    {{> meta}}
    <title>Главная страница</title>
</head>
<body>
<section class="container">
    <div class="my-3" align="center">
        <h3>Привет, {{#name}}{{name}}{{/name}}</h3>
        <form action="/logout" method="post">
            <input type="hidden" name="_csrf" value="{{_csrf.token}}"/>
            <input class="button" type="submit" value="Выйти"/>
        </form>
    </div>
    <div class="my-3" align="center">
        <form action="/createSecret" method="post">
            <input type="text" name="secretName" placeholder="Название секрета">
            <input type="text" name="secretValue" placeholder="Значение секрета">
            <input type="hidden" name="_csrf" value="{{_csrf.token}}"/>
            <input class="button" type="submit" value="+">
            {{#creatingSecretMessage}}
                <b>{{creatingSecretMessage}}</b>
            {{/creatingSecretMessage}}
        </form>
    </div>
    <div class="mt-3">
        <form method="post">
            <table>
                <tr>
                    <th>Секрет</th>
                    <th>Значение</th>
                </tr>

                {{#secrets}}
                    <tr>
                        <td>{{key}}</td>
                        <td>{{value}}</td>
                        <td><button class="btn btn-lg btn-primary btn-block" type="submit"
                                name="whichSecretToDelete" value={{key}} formaction="/deleteSecret">Удалить</button><td>
                        <td><button class="btn btn-lg btn-primary btn-block" type="submit"
                                    name="whichSecretToGet" value={{key}} formaction="/getSecret">Посмотреть</button><td>
                        <input type="hidden" name="_csrf" value="{{_csrf.token}}"/>
                    </tr>

                {{/secrets}}
            </table>
            {{#secretsListError}}
                <b>{{secretsListError}}</b>
            {{/secretsListError}}
        </form>
    </div>
</section>
<!--{{^secrets}}-->
    <div class="my-3" align="center">
        Ждем секретов!
    </div>
<!--{{/secrets}}-->
</body>
</html>